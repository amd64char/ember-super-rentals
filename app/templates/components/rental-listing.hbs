
<article class="listing">
  <!--allow user to toggle larger image-->
  <a
    onclick={{action "toggleImageSize"}}
    class="image {{if isWide "wide"}}"
    role="button">
      <img src={{rental.image}} alt=""/>
      <small>View Larger</small>
  </a>
  <div class="details">
    <!--link to rental details-->
    <h3>{{#link-to "rentals.show" rental class=rental.id}}{{rental.title}}{{/link-to}}</h3>
    <div class="detail owner">
      <span>Owner:</span> {{rental.owner}}
    </div>
    <div class="detail type">
      <!--rental-property-type from passed in rental category-->
      <span>Type:</span> {{rental-property-type rental.category}} - {{rental.category}}
    </div>
    <div class="detail location">
      <span>Location:</span> {{rental.city}}
    </div>
    <div class="detail bedrooms">
      <span>Number of bedrooms:</span> {{rental.bedrooms}}
    </div>
  </div>
  <!--build leaflet using city as location marker-->
  {{location-map location=rental.city}}
</article>